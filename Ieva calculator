    jokes = [
        "That was easy peasy! ğŸ‹",
        "Youâ€™re good at addition, but can you add friends too? ğŸ˜",
        "Adding is like friendship, it only grows â¤ï¸"
    ]
    print(random.choice(jokes))
    return x + y

def subtract(x, y):
    jokes = [
        "Subtractingâ€¦ like my free time disappearing â³",
        "Careful! Donâ€™t subtract your happiness ğŸ˜…",
        "That was easier than skipping ads on YouTube ğŸ“º"
    ]
    print(random.choice(jokes))
    return x - y

def multiply(x, y):
    jokes = [
        "Multiplying fun times, just like rabbits ğŸ‡ğŸ‡",
        "Wow, you multiplied that faster than my problems ğŸ˜‚",
        "Careful, donâ€™t multiply your stress levels!"
    ]
    print(random.choice(jokes))
    return x * y

def divide(x, y):
    jokes = [
        "Dividingâ€¦ like pizza with friends ğŸ•",
        "I hope youâ€™re not dividing bills again ğŸ’¸",
        "Easy math, harder than dividing chocolate fairly ğŸ˜…"
    ]
