import random

def calculator():
    print("Welcome to the Fun Calculator! 😄")
    
    while True:
        try:
            num1 = float(input("Enter the first number: "))
            operator = input("Enter an operator (+, -, *, /, %, ^): ")
            num2 = float(input("Enter the second number: "))
        except ValueError:
            print("Oops! Please enter valid numbers. 😅")
            continue

        if operator == '+':
            result = num1 + num2
            op_name = "addition"
        elif operator == '-':
            result = num1 - num2
            op_name = "subtraction"
        elif operator == '*':
            result = num1 * num2
            op_name = "multiplication"
        elif operator == '/':
            if num2 == 0:
                print("Can't divide by zero! 🤯")
                continue
            result = num1 / num2
            op_name = "division"
        elif operator == '%':
            result = (num1 * num2) / 100
            op_name = "percentage"
        elif operator == '^':
            result = num1 ** num2
            op_name = "power"
        else:
            print("Unknown operator! 😅")
            continue

        print(f"Result: {result}")

        # Fun jokes that mention the operation
        jokes = [
            f"Easy peasy! That was a smooth {op_name}! 😎",
            f"Careful! Don't subtract your happiness 😅",
            f"Wow, math magic with {op_name}! ✨",
            f"Hmm… I hope you didn't forget the zero during {op_name}! 🤔",
            f"Calculators are friends, not food. 😁"
        ]
        print(random.choice(jokes))

        if input("Calculate again? (yes/no): ").lower() != 'yes':
            print("Thanks for calculating! Bye! 👋")
            break

calculator()
